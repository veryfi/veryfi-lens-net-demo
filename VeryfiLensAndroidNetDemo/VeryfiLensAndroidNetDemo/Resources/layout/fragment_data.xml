<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="PrivateResource">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/receipt_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/veryfi_lens_content_inset_medium"
                        android:backgroundTint="@color/veryfi_lens_demo_card_background"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeWidth="1dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_extracted_fields"
                                    android:textAppearance="?attr/textAppearanceTitleMedium"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_id"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_id"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_invoice_number"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_invoice_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_currency_code"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_currency_code"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_tax"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_tax"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_category"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_category"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_img_file_name"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_img_file_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_reference_number"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_reference_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_created_date"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_created_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_img_thumbnail"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_img_thumbnail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_img_url"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_img_url"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_pdf_url"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_pdf_url"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data__updated_date"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_updated_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp"
                                android:paddingTop="14dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="14dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/extracted_data_date"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                            <TextView
                                    android:id="@+id/txt_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textSize="14sp"
                                    tools:ignore="PrivateResource"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>