<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   style="?attr/materialCardViewElevatedStyle"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:backgroundTint="?android:attr/colorBackground"
                                                   app:cardCornerRadius="5dp"
                                                   app:cardElevation="6dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_vector_settings"
                android:drawablePadding="10dp"
                android:padding="16dp"
                android:text="@string/settings_section_general"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="14sp"
                android:textStyle="bold" />

        <LinearLayout
                android:id="@+id/ocr_regex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_ocr_regex"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_ocr_regex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_ocr_regex_value"
                    android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ocr_view_corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_ocr_view_corner_radius"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_ocr_view_corner_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_ocr_view_corner_radius_value"
                    android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ocr_view_corner_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_txt_ocr_view_corner_width"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_ocr_view_corner_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_txt_ocr_view_corner_width_value"
                    android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ocr_view_corner_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_txt_ocr_view_corner_height"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/txt_ocr_view_corner_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_txt_ocr_view_corner_height_value"
                    android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/stitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_stitch"
                    android:textSize="14sp" />

            <Switch
                    android:id="@+id/switch_stitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="-2dp"
                    android:checked="true"
                    android:paddingHorizontal="-2dp"
                    android:thumbTint="@color/color_veryfi_lens_demo_selector_switch_thumb"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/multiple_documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_multiple_documents"
                    android:textSize="14sp" />

            <Switch
                    android:id="@+id/switch_multiple_documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="-2dp"
                    android:checked="true"
                    android:paddingHorizontal="-2dp"
                    android:thumbTint="@color/color_veryfi_lens_demo_selector_switch_thumb"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_zoom"
                    android:textSize="14sp" />

            <Switch
                    android:id="@+id/switch_zoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="-2dp"
                    android:checked="true"
                    android:paddingHorizontal="-2dp"
                    android:thumbTint="@color/color_veryfi_lens_demo_selector_switch_thumb"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/switch_camera_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/switch_camera"
                    android:textSize="14sp" />

            <Switch
                    android:id="@+id/switch_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="-2dp"
                    android:checked="true"
                    android:paddingHorizontal="-2dp"
                    android:thumbTint="@color/color_veryfi_lens_demo_selector_switch_thumb"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>